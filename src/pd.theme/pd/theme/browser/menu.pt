<ul id="pd-portal-globalnav" class="vertical large-horizontal menu" data-responsive-menu="drilldown large-dropdown">
    <tal:list repeat="itemdict view/getMenu">
      <li tal:attributes="class python:
			  (itemdict['currentItem'] or itemdict['currentParent'])
			  and 'selected' or 'normal'"
	  tal:define="item itemdict/item">
	<a tal:attributes="href item/getURL">
        <span tal:content="item/Title" />
    </a>
	<ul tal:condition="exists:itemdict/children"
              class="vertical menu">
        <li class="top-section is-submenu-item is-dropdown-submenu-item" role="menuitem">
        	<a tal:attributes="href item/getURL">
                <span tal:content="item/Title" />
            </a>
        </li>
	  <tal:sublist
	     repeat="child itemdict/children">
	     <li tal:attributes="class python:
				 (child['currentItem']
				 or child['currentParent'])
				 and 'selected is-submenu-item is-dropdown-submenu-item' or 'normal is-submenu-item is-dropdown-submenu-item'">
	       <a tal:content="child/item/Title"
		  tal:attributes="href child/item/getURL" />
	     </li>
	  </tal:sublist>
	</ul>
      </li>
    </tal:list>
  </ul>
